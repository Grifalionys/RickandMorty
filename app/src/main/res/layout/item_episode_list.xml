<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/gradient_item">

    <TextView
        android:id="@+id/tvEpisodeInfo"
        style="@style/TextViewWhiteStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="№ эпизода"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvNameEpisode"
        app:layout_constraintStart_toStartOf="@+id/tvNameEpisode"
        app:layout_constraintTop_toBottomOf="@+id/tvNameEpisode" />

    <TextView
        android:id="@+id/tvDataInfo"
        style="@style/TextViewWhiteStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Дата релиза"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvNumberEpisode"
        app:layout_constraintStart_toStartOf="@+id/tvNumberEpisode"
        app:layout_constraintTop_toBottomOf="@+id/tvNumberEpisode" />

    <TextView
        android:id="@+id/tvNameEpisode"
        style="@style/TextViewWhiteStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name_example"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumberEpisode"
        style="@style/TextViewWhiteStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/tvEpisodeInfo"
        app:layout_constraintStart_toStartOf="@+id/tvEpisodeInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvEpisodeInfo" />

    <TextView
        android:id="@+id/tvData"
        style="@style/TextViewWhiteStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/unknown"
        app:layout_constraintEnd_toEndOf="@+id/tvDataInfo"
        app:layout_constraintStart_toStartOf="@+id/tvDataInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvDataInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>